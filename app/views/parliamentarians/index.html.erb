<div class="row">
  <div class="small-12 columns">
    <div class="off-canvas-wrap" data-offcanvas>
      <div class="inner-wrap">
        <div class="large-0 pull-0 columns">
          <nav class="top-bar show-for-medium-up" data-topbar>
            <ul class="title-area">
              <li class="name">
                <h1><a href="#">Perfil Parlamentar</a></h1>
              </li>
            </div>
            <button data-dropdown="drop1" aria-controls="drop1" aria-expanded="false">Estados &raquo;</button>
            <ul id="drop1" class="f-dropdown" data-dropdown-content aria-hidden="true" tabindex="-1">
              <ul id="drop" class="[tiny small medium large content]f-dropdown" data-dropdown-content>
              <div style="height:400px;line-height:3em;overflow:scroll;padding:3px;">
                <% @ordened_states.each do |p| %>
                  <li><a href="#"> <%= p.state %> </a></li>
                <%end%>
              </ul>
            </ul>
            <ul id="drop2" class="f-dropdown" data-dropdown-content aria-hidden="true" tabindex="-1">
              <ul id="drop" class="[tiny small medium large content]f-dropdown" data-dropdown-content>
              <div style="height:400px;line-height:3em;overflow:scroll;padding:3px;">
                <% @ordened_partys.each do |p| %>
                  <li><a href="#"> <%= p.party %> </a></li>
                <%end%>
              </ul>
            </ul>

          <section class="top-bar-section">
            <!-- Right Nav Section -->
          </section>
        </nav>
        <nav class="tab-bar show-for-small">
          <section class="left-small">
            <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
          </section>
          <section class="middle tab-bar-section">
            <h1 class="title">Offcanvas for Small</h1>
          </section>
        </nav>
        <aside class="left-off-canvas-menu">
          <ul class="off-canvas-list">
            <li><label>Foundation</label></li>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </aside>
        <div style="width:983px;height:800px;line-height:3em;overflow:scroll;padding:5px;">
          <%= form_tag parliamentarians_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Buscar", :name => nil %>
            </p>
          <% end %>
          <ul>
            <% @parliamentarians.each do |p| %>
              <p>
              <center><a href="#"<span><img src="<%= p.url_photo %>"/></span></center>
              <center><b><%= p.name %></b></center>
              <li><right>Partido: <%= p.party %></right>
              <li>Estado: <%= p.state %></li>
              <li>Email: <%= p.email %> </li>
              <li>Telefone: <%= p.phone %></li>
              <li>Endereço: Praça dos Três Poderes - Esplanada dos Ministérios, Brasília. Gabinete: <%= p.cabinet %> </li>
              </p>
            <%end%>
          </ul>
        </div>
       <a class="exit-off-canvas"></a>
       </div>
     </div>
   </div>
</div>
