<div class="row">
  <div class="small-12 columns">
    <div class="off-canvas-wrap" data-offcanvas>
      <div class="inner-wrap">
        <div class="large-0 pull-0 columns">
          <nav class="top-bar show-for-medium-up" data-topbar>
            <ul class="title-area">
              <li class="name">
                <h1><a href="#">Busca de Parlamentares</a></h1>
              </li>
            </div>
            <a href="#" data-options="align:left" data-dropdown="drop" class="button">Link Dropdown &raquo;</a>
              <ul id="drop" class="[tiny small medium large content]f-dropdown" data-dropdown-content>
                <% @parliamentarians_s.each do |p| %>
                  <li><a href="#"> <%= p.state %> </a></li>
                <%end%>
              </ul>
          <section class="top-bar-section">
            <!-- Right Nav Section -->
          </section>
        </nav>
        <nav class="tab-bar show-for-small">
          <section class="left-small">
            <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
          </section>
          <section class="middle tab-bar-section">
            <h1 class="title">Offcanvas for Small</h1>
          </section>
        </nav>
        <aside class="left-off-canvas-menu">
          <ul class="off-canvas-list">
            <li><label>Foundation</label></li>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </aside>
        <div style="width:583px;height:800px;line-height:3em;overflow:scroll;padding:5px;">
          <%= form_tag parliamentarians_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :name => nil %>
            </p>
          <% end %>
          <ul>
            <% @parliamentarians.each do |p| %>
              <li> <%= p.name %> </li>
            <%end%>
          </ul>
        </div>
       <a class="exit-off-canvas"></a>
       </div>
     </div>
   </div>
</div>
