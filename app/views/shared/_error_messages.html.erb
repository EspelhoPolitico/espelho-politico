<% if @user.errors.any? %>
    <div data-alert class="alert-box alert radious">
      <%= pluralize(@user.errors.count, "erro(s") %>) deve(m) ser corrigido(s):
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
      <% end %>
      <a href="#" class="close">&times;</a>
    </div>
<% end %>
