<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <div class="field">
    <p>
      <%= f.label 'Nome' %>
      <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
    </p>
    <p>
    <%= f.label 'Nome de Usuário' %>
    <%= f.text_field :username %>
    </p>
    <p>
    <%= f.label 'Senha' %>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.label 'Confirmação de Senha' %>
    <%= f.password_field :password_confirmation %>
    <p><%= f.submit %></p>
  </div>
<% end %>
<%= link_to "Cancelar", root_path %>
