<h1>Entrar</h1>

<%= form_tag "/sessions/sign_in" do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag "user[username]", @user_name %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag "user[password]" %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>